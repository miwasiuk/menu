@model menu.Models.UsersRoles

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>


<div>
    <h4>Rola użytkonika</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Rola
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Roles.Name)
        </dd>
        <dt class = "col-sm-2">
            Użytkownik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
